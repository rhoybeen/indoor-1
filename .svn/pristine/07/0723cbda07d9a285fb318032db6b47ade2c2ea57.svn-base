	 */
	public static int getDeviceWidth(Activity context) {
		Display display = context.getWindowManager().getDefaultDisplay();
		Point p = new Point();
		display.getSize(p);
		return p.x;
	}

	/** 获取屏幕的高 */
	public static int getDeviceHeight(Activity context) {
